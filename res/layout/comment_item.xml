<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:background="@drawable/item_select"
                  android:id="@+id/usercode_layout" android:baselineAligned="false">
        <TextView
                android:id="@+id/uer_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#007cc3"
                android:textSize="30dp"
                android:layout_weight="1" android:gravity="center_vertical"/>
        <TextView
                android:id="@+id/comment_context"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#666872"
                android:textSize="30dp"
                android:layout_weight="1" android:gravity="center_vertical"/>
    </LinearLayout>

</LinearLayout>
