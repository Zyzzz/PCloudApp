<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@color/gray_m">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp" android:layout_marginTop="30dp"
            android:background="@drawable/item_select" android:id="@+id/mail">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/register_name"
                android:id="@+id/textView11" android:textColor="@android:color/black"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical" android:textSize="20dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/mymail" android:hint="@string/register_name" android:gravity="fill_vertical|right"
                android:textColor="@color/gray_l" android:layout_marginRight="10dp" android:layout_weight="1"
                android:layout_gravity="center_vertical" android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp" android:background="@drawable/item_select"
            android:layout_marginTop="1dp" android:id="@+id/password">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/repassword"
                android:id="@+id/textView12" android:textColor="@android:color/black" android:layout_marginLeft="10dp"
                android:layout_weight="10"
                android:layout_gravity="center_vertical" android:textSize="20dp"/>
        <ImageView
                android:layout_width="14dp"
                android:layout_height="17dp"
                android:id="@+id/imageView11" android:background="@drawable/arrow"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:layout_marginRight="10dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp">
        <Button
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="@string/logout"
                android:id="@+id/logout" android:background="@drawable/button_select"
                android:layout_weight="1.5" android:layout_marginLeft="15dp" android:layout_marginRight="15dp"
                android:textAppearance="@android:style/TextAppearance.Large" android:textColor="@android:color/white"
                android:textSize="18dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1">
    </LinearLayout>
</LinearLayout>