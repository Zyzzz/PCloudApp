<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@android:color/white">
    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content" android:background="@null" android:textColor="@android:color/black"
              android:textAppearance="@android:style/TextAppearance.Medium" android:inputType="textMultiLine"
              android:gravity="top" android:singleLine="false"
              android:id="@+id/text" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingBottom="5dp"
              android:paddingRight="10dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
              android:layout_weight="1" android:hint="请输入评论"/>

</LinearLayout>