<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#f5f5f5">
                <LinearLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="@android:color/white"
                                android:layout_weight="1"
                                android:layout_marginTop="30dp">
                              <ImageView android:layout_width="wrap_content"
                                          android:layout_height="match_parent"
                                           android:background="@drawable/user"
                                            android:layout_weight="3"/>
                              <LinearLayout android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_weight="10"
                                            android:orientation="vertical">
                                            <TextView android:layout_width="match_parent"
                                                      android:layout_height="wrap_content"
                                                      android:text="@string/nick_name"
                                                      android:layout_weight="1"/>
                                            <TextView android:layout_width="match_parent"
                                                      android:layout_height="wrap_content"
                                                      android:text="@string/nick_name"
                                                      android:layout_weight="1"/>
                              </LinearLayout>
                              <ImageButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/user"/>

                </LinearLayout>

               <LinearLayout android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:orientation="horizontal" android:layout_weight="1">
               </LinearLayout>


                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal" android:focusableInTouchMode="false"
                              android:background="@android:color/white" android:layout_weight="0.5">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="match_parent"
                              android:text="@string/account" android:layout_weight="15" android:textIsSelectable="true"
                              android:textSize="20dp" android:autoText="false"/>
                    <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/imageButton"
                            android:layout_weight="2"/>

                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal" android:focusableInTouchMode="false"
                              android:background="@android:color/white" android:layout_weight="0.5"
                              android:layout_marginTop="1dp">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="match_parent"
                              android:text="@string/account" android:layout_weight="15" android:textIsSelectable="true"
                              android:textSize="20dp" android:autoText="false"/>
                    <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/imageButton"
                            android:layout_weight="2"/>

                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:layout_weight="12">
                </LinearLayout>


</LinearLayout>
