<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/gray_m">
    <LinearLayout android:id="@+id/personal_info"
            android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:background="@drawable/item_select"
                  android:layout_weight="1"
                  android:layout_marginTop="30dp">
        <ImageView android:layout_width="80dp"
                   android:layout_height="80dp"
                   android:background="@drawable/header"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:id="@+id/personal_header" android:layout_gravity="center_vertical"/>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_weight="10"
                      android:orientation="vertical">
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:hint="@string/nick_name"
                      android:layout_weight="1" android:id="@+id/nick_name" android:textIsSelectable="false"
                      android:gravity="fill_vertical" android:textAppearance="@android:style/TextAppearance.Medium"
                      android:layout_marginRight="5dp"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:hint="@string/register_name"
                      android:layout_weight="1" android:id="@+id/register_name" android:gravity="fill_vertical"
                      android:textAppearance="@android:style/TextAppearance.Medium" android:layout_marginRight="5dp"/>
        </LinearLayout>
        <ImageView
                android:layout_width="14dp"
                android:layout_height="17dp"
                android:background="@drawable/arrow" android:id="@+id/my_information"
                android:layout_gravity="center_vertical" android:layout_marginRight="10dp"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal" android:layout_weight="1">
    </LinearLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal" android:focusableInTouchMode="false"
                  android:background="@drawable/item_select" android:layout_weight="0.5"
                  android:layout_gravity="center_vertical" android:id="@+id/my_sharing"
                  android:layoutMode="opticalBounds">
        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView1"
                android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
                android:layout_marginTop="3dp" android:layout_marginBottom="3dp"
                android:background="@drawable/mysharing"
                android:layout_gravity="center_vertical"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                      android:hint="@string/personal_sharing" android:layout_weight="1" android:id="@+id/textView6"
                      android:gravity="fill_vertical" android:textColorHint="@android:color/black"
                      android:textAppearance="@android:style/TextAppearance.Large"/>
            <ImageView android:layout_width="14dp" android:layout_height="17dp" android:id="@+id/imageView4"
                       android:background="@drawable/arrow" android:layout_marginRight="10dp"
                       android:layout_gravity="center_vertical"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:focusableInTouchMode="false"
                  android:background="@drawable/item_select"
                  android:layout_weight="0.5"
                  android:layout_marginTop="1dp" android:layout_gravity="center_vertical" android:id="@+id/my_account">
        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView"
                android:background="@drawable/myaccount"
                android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
                android:layout_marginTop="3dp" android:layout_marginBottom="3dp"
                android:layout_gravity="center_vertical"/>
        <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                  android:layout_weight="15"
                  android:autoText="false" android:layout_marginTop="3dp"
                  android:layout_marginBottom="3dp" android:layout_gravity="center_vertical"
                  android:id="@+id/textView5" android:clickable="false" android:gravity="fill_vertical"
                  android:hint="@string/account" android:textColorHint="@android:color/black"
                  android:textAppearance="@android:style/TextAppearance.Large"/>
        <ImageView android:layout_width="14dp" android:layout_height="17dp" android:id="@+id/imageView3"
                   android:background="@drawable/arrow" android:layout_marginRight="10dp"
                   android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_weight="12" android:layout_gravity="center_vertical">
    </LinearLayout>


</LinearLayout>
