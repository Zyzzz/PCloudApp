<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@color/gray_m">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp" android:background="@color/gray_l">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:layout_weight="1" android:background="@color/gray_s"
                android:layout_margin="1dp">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/search_text" android:layout_weight="1"
                    android:inputType="text"
                    android:hint="输入 群计划名/号 搜索" android:background="@null"
                    android:textColor="@android:color/black" android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/search_button"
                android:orientation="vertical"
                android:layout_width="40dp"
                android:layout_height="match_parent" android:background="@drawable/search_select" android:layout_marginTop="1dp"
                android:layout_marginRight="1dp" android:layout_marginBottom="1dp">
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView15" android:background="@drawable/search"
            />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp" android:background="@color/gray_l">
    </LinearLayout>
    <ListView
            android:id="@+id/multi_listview"
            android:divider="@color/gray_l"
            android:dividerHeight="1dp"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">
    </ListView>
</LinearLayout>